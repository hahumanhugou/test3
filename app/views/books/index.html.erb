<div>
  <%= flash[:notice] %>
</div>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'users/list', book: @book ,user: @user%>
<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
      <tr>
        <td><%= link_to book.user.get_profile_image(100,100), user_path(book.user_id) %></td>
        <td> <%= link_to book_path(book.id) do %>
             <%= book.title %>
             <% end %>
        </td>
        <td><%= book.body %></td>

      </tr>

  </tbody>
  <% end %>
</table>
    </div>



</div>
</div>